<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".guidlines">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFF"
            android:padding="16dp">

            <!-- Registration and Access Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration and Access"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register: Users need to create an account to access the scholarly works published on this website."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone can access the published works on this website but the publication of works should only come from residents of Camarines Norte."
                android:paddingBottom="16dp" />

            <!-- Search and Browse Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search and Browse"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories: Organize papers by categories like article type, year, municipality, or institution."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Function: An advanced search option allowing users to refine their search based on keywords, article type, publication dates, etc."
                android:paddingBottom="16dp" />

            <!-- Publication Guidelines Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Guidelines"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of Work: Enter the title of your paper, ensuring it accurately reflects the content."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abstract of Work: Provide a concise summary of the paper's content, objectives, methods, results, and conclusions. The abstract should be a brief, standalone description of the work's essence."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author/s Information: Provide the name/s of the author/s involved in the creation of the work. Include the author/s' address for correspondence purposes. Enter email addresses and contact numbers for communication."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location of Physical Copy: Specify where the physical copy of the work is located, such as a library, institution, or specific address."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability for Download: Indicate whether the work is available for download. If available, provide instructions or a button for downloading."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Date: Enter the date when the work was officially published or made available."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Email: Include the official school email address affiliated with the author/s for verification purposes."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission Confirmation: Review all entered information for accuracy before submission. Upon submission, you'll receive confirmation of the successful submission of your work."
                android:paddingBottom="16dp" />

            <!-- Accessibility Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessibility"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User-Friendly Interface: Website is easy to navigate for users of all technical abilities."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Responsiveness: The site is optimized for mobile devices to enable access on-the-go."
                android:paddingBottom="16dp" />

            <!-- Security and Privacy Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security and Privacy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure Access: Ensure user data, especially personal and academic information, is encrypted and protected."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy: Clearly outline how user data is collected, used, and protected in a privacy policy."
                android:paddingBottom="16dp" />

            <!-- Compliance and Maintenance Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compliance and Maintenance"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compliance Standards: Adhere to relevant legal and ethical standards regarding publication, copyright, and data protection."
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Updates: Ensure the website is regularly maintained, updated, and in compliance with evolving web standards."
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>